{% extends 'HelpdeskBundle::base.html.twig' %}

{% block header %}
    <div class="header row">
        <div class="col-sm-12">
            <h2 class="text-center">Header</h2>
            {% render url('fos_user_security_login') %}
        </div>
    </div>
{% endblock %}
{% block main %}
    <div class="main row">
        <div class="col-sm-2 menu">
            <h3 class="text-center">Menu</h3>
            <ul>
                <li></li>
            </ul>
        </div>
        <div class="col-sm-10 content">
            {% block content %}
                <h3 class="text-center">Content</h3>
            {% endblock %}
        </div>
    </div>
{% endblock %}
{% block footer %}
    <div class="row footer">
        <div class="col-sm-12">
            <h3 class="text-center">Footer</h3>
        </div>
    </div>
{% endblock %}

